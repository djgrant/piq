{
  "name": "piq",
  "private": true,
  "type": "module",
  "license": "MIT",
  "workspaces": ["packages/*", "playground", "website", "docs"],
  "scripts": {
    "dev": "concurrently -n astro,vitepress -c blue,green \"pnpm dev:website\" \"pnpm dev:docs\"",
    "dev:website": "cd website && pnpm dev",
    "dev:docs": "cd docs && pnpm dev -- --port 5174",
    "build": "bun run --filter '*' build",
    "build:site": "./scripts/build.sh",
    "deploy": "./scripts/build.sh && npx wrangler pages deploy dist --project-name=piq",
    "test": "bun test",
    "check": "bun run --filter '*' check",
    "clean": "rm -rf packages/*/dist dist",
    "playground": "bun run --cwd playground dev"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^9.1.2",
    "typescript": "^5.8.3",
    "zod": "^4.3.5"
  },
  "dependencies": {
    "yaml": "^2.8.2"
  }
}
